---
import { Icon } from "astro-icon/components";
---

<script is:inline>
  function emitNextSlide() {
    document.dispatchEvent(new CustomEvent("astro-slides:next"));
  }
</script>

<button
  class="opacity-10 hover:opacity-80 transition-opacity duration-300 ease-in-out border-slate-900 border-solid border-4 rounded-full p-2"
  onclick="window.emitNextSlide()"
>
  <Icon name="arrow-right" size={60} />
</button>
