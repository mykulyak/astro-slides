---
import "@components/globalStyles.astro";
import Slide from "@components/Slide.astro";
import type { SlideLayout, SlideSpacing } from "@components/slideLayout";

interface Props {
  class?: string;
  layout?: SlideLayout;
  layoutSpacing?: SlideSpacing;
}

const { class: userClass, layout, layoutSpacing } = Astro.props;
---

<Slide
  layout={layout}
  layoutSpacing={layoutSpacing}
  class={`px-[100px] py-[120px] ${userClass ? userClass : ""}`}
>
  <slot name="background" slot="background" />
  <slot />
</Slide>
