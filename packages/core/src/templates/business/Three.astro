---
import PicturePlaceholder from "@components/placeholders/Picture.astro";
import BaseSlide from "@components/Slide.astro";
import SlideTitle from "./SlideTitle.astro";
import ContentPlaceholder from "@components/placeholders/Content.astro";
---

<BaseSlide layout="h+3x1" layoutSpacing="75x25">
  <div class="row-span-2">
    <slot name="left">
      <PicturePlaceholder />
    </slot>
  </div>
  <SlideTitle class="col-span-2 mr-[120px] mt-[100px]">
    <slot name="title">The <em>title</em> slot</slot>
  </SlideTitle>
  <div class="col-span-2 mr-[120px] mb-[100px]">
    <slot name="right">
      <ContentPlaceholder>
        This is the <code>right</code> slot
      </ContentPlaceholder>
    </slot>
  </div>
</BaseSlide>
