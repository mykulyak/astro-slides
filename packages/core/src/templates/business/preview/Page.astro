---
import Card from "./Card.astro";
import TitleSlide from "../TitleSlide.astro";
import AboutUs from "../AboutUs.astro";
import FullSlideContent from "../FullSlideContent.astro";
import ThankYou from "../ThankYou.astro";
import TwoColumnFullBleed from "../TwoColumnFullBleed.astro";
import ThreeContent from "../ThreeContent.astro";
import FourContent from "../FourContent.astro";
---

<section class="page-layout">
  <Card>
    <TitleSlide />
    <Fragment slot="title">
      <a href="title-slide">Title Slide</a>
    </Fragment>
  </Card>
  <Card>
    <AboutUs />
    <Fragment slot="title">
      <a href="about-us">About Us</a>
    </Fragment>
  </Card>
  <Card>
    <TwoColumnFullBleed />
    <Fragment slot="title">
      <a href="two-column-full-bleed">Two Column Content (Full Bleed)</a>
    </Fragment>
  </Card>
  <Card>
    <ThreeContent />
    <Fragment slot="title">
      <a href="three-content">Three Column Content</a>
    </Fragment>
  </Card>
  <Card>
    <FourContent />
    <Fragment slot="title">
      <a href="four-content">Four Column Content</a>
    </Fragment>
  </Card>
  <Card>
    <FullSlideContent />
    <Fragment slot="title">
      <a href="full-slide-content">Full Slide Content</a>
    </Fragment>
  </Card>
  <Card>
    <ThankYou />
    <Fragment slot="title">
      <a href="thank-you">Thank You</a>
    </Fragment>
  </Card>
</section>

<style>
  .page-layout {
    width: 100%;
    height: 100%;
    padding: 40px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    grid-auto-rows: 250px;
    gap: 16px;
    overflow-x: hidden;
    overflow-y: auto;
  }
</style>
