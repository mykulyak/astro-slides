---
import BaseSlide from "./Base.astro";
import TextPlaceholder from "../../components/placeholders/Text.astro";
---

<BaseSlide layout="1x2asym" layoutSpacing="90x20">
  <div class="text-[270px] leading-[270px] text-center self-end">
    <slot name="number">
      <TextPlaceholder><code>number</code></TextPlaceholder>
    </slot>
  </div>
  <div class="text-[45px] text-center self-start">
    <slot name="description">
      <TextPlaceholder>
        This is the <code>description</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <slot name="left_nav" slot="left_nav" />
  <slot name="right_nav" slot="right_nav" />
  <slot name="background" slot="background" />
</BaseSlide>
