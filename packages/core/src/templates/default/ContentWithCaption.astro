---
import BaseSlide from "./Base.astro";
import TextPlaceholder from "../../components/placeholders/Text.astro";
import ContentPlaceholder from "../../components/placeholders/Content.astro";
---

<BaseSlide layout="h+2x1" layoutSpacing="90x20">
  <div class="text-[60px]">
    <slot name="title">
      <TextPlaceholder>
        This is the <code>title</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <div class="row-span-2 text-[45px]">
    <slot name="content">
      <ContentPlaceholder>
        This is the <code>content</code> slot
      </ContentPlaceholder>
    </slot>
  </div>
  <div class="text-[30px]">
    <slot name="description">
      <TextPlaceholder>
        This is the <code>description</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <slot name="left_nav" slot="left_nav" />
  <slot name="right_nav" slot="right_nav" />
  <slot name="background" slot="background" />
</BaseSlide>
