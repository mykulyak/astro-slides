---
import BaseSlide from "./Base.astro";
import TextPlaceholder from "@components/placeholders/Text.astro";
---

<BaseSlide class="main-point-layout">
  <div class="text-[120px]">
    <slot name="content">
      <TextPlaceholder>
        This is the<br /><code>content</code> slot
      </TextPlaceholder>
    </slot>
  </div>
</BaseSlide>

<style is:global>
  .main-point-layout {
    display: grid;
    grid-template-columns: 70%;
    grid-template-rows: 1fr;
    align-content: center;
  }
</style>
