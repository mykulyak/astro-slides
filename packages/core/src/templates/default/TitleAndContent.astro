---
import BaseSlide from "./Base.astro";
import TextPlaceholder from "@components/placeholders/Text.astro";
---

<BaseSlide layout="h+1x1" class="title-and-content-layout">
  <div class="text-[64px]">
    <slot name="title">
      <TextPlaceholder>
        This is the <code>title</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <div class="text-[45px]">
    <slot name="content">
      <TextPlaceholder>
        This is the <code>content</code> slot
      </TextPlaceholder>
    </slot>
  </div>
</BaseSlide>

<style is:global>
  .title-and-content-layout {
    row-gap: 20px;
  }
</style>
