<BaseSlide layout="h+1x1" layoutSpacing="90x20">
  <div class="text-[64px]">
    <slot name="title">
      <TextPlaceholder>
        This is the <code>title</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <div class="text-[45px]">
    <slot name="content">
      <TextPlaceholder>
        This is the <code>content</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <slot name="left_nav" slot="left_nav" />
  <slot name="right_nav" slot="right_nav" />
