---
import BaseSlide from "./Base.astro";
import TextPlaceholder from "@components/placeholders/Text.astro";

// TODO currently spacings are optimized for 16:9 aspect ratio.
// TODO Make them optimal for every common aspect ratio.
---

<BaseSlide layout="1x2asym" class="title-slide-layout">
  <div class="self-end text-[130px] text-center">
    <slot name="title"
      ><TextPlaceholder>
        This is the <code>title</code> slot
      </TextPlaceholder></slot
    >
  </div>
  <div class="self-start text-[70px] text-center">
    <slot name="subtitle"
      ><TextPlaceholder>
        This is the <code>subtitle</code> slot
      </TextPlaceholder></slot
    >
  </div>
</BaseSlide>

<style is:global>
  .title-slide-layout {
    row-gap: 8px;
  }
</style>
