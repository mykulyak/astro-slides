---
import BaseSlide from "./Base.astro";
import TextPlaceholder from "@components/placeholders/Text.astro";

interface Props {
  variant?: "left" | "right";
}

const { variant = "left" } = Astro.props;
---

<BaseSlide
  layout={variant === "left" ? "h+2x1al" : "h+2x1ar"}
  class="two-asymmetric-content"
>
  <div class="text-[64px] col-span-2">
    <slot name="title">
      <TextPlaceholder>
        This is the <code>title</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <div class="text-[35px]">
    <slot name="content_left">
      <TextPlaceholder>
        This is the <code>content_left</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <div class="text-[35px]">
    <slot name="content_right">
      <TextPlaceholder>
        This is the <code>content_right</code> slot
      </TextPlaceholder>
    </slot>
  </div>
</BaseSlide>

<style is:global>
  .two-asymmetric-content {
    row-gap: 20px;
    column-gap: 90px;
  }
</style>
