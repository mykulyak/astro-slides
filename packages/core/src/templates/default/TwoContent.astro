---
import BaseSlide from "./Base.astro";
import TextPlaceholder from "../../components/placeholders/Text.astro";
---

<BaseSlide layout="h+2x1" layoutSpacing="90x20">
  <div class="text-[64px] col-span-2">
    <slot name="title">
      <TextPlaceholder>
        This is the <code>title</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <div class="text-[35px]">
    <slot name="content_left">
      <TextPlaceholder>
        This is the <code>content_left</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <div class="text-[35px]">
    <slot name="content_right">
      <TextPlaceholder>
        This is the <code>content_right</code> slot
      </TextPlaceholder>
    </slot>
  </div>
  <slot name="left_nav" slot="left_nav" />
  <slot name="right_nav" slot="right_nav" />
  <slot name="background" slot="background" />
</BaseSlide>
