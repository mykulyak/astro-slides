---
import Card from "./Card.astro";
import TitleSlide from "../TitleSlide.astro";
import TitleAndContent from "../TitleAndContent.astro";
import SectionHeader from "../SectionHeader.astro";
import TwoContent from "../TwoContent.astro";
import ThreeContent from "../ThreeContent.astro";
import TitleOnly from "../TitleOnly.astro";
import Blank from "../Blank.astro";
import ContentWithCaption from "../ContentWithCaption.astro";
import VerticalTitleAndText from "../VerticalTitleAndText.astro";
import MainPoint from "../MainPoint.astro";
import BigNumber from "../BigNumber.astro";
import TwoAsymmetricContent from "../TwoAsymmetricContent.astro";
---

<section class="page-layout">
  <Card>
    <TitleSlide />
    <Fragment slot="title">
      <a href="title-slide">Title Slide</a>
    </Fragment>
  </Card>
  <Card>
    <SectionHeader />
    <Fragment slot="title">
      <a href="section-header">Section Header</a>
    </Fragment>
  </Card>
  <Card>
    <TitleOnly />
    <Fragment slot="title">
      <a href="title-only">Title Only</a>
    </Fragment>
  </Card>
  <Card>
    <TitleAndContent />
    <Fragment slot="title">
      <a href="title-and-content">Title and Content</a>
    </Fragment>
  </Card>
  <Card>
    <TwoContent />
    <Fragment slot="title">
      <a href="two-content">Two Column Content</a>
    </Fragment>
  </Card>
  <Card>
    <TwoAsymmetricContent variant="left" />
    <Fragment slot="title">
      <a href="ttwo-asymmetric-content-left"
        >Two Unequal Content (left variant)</a
      >
    </Fragment>
  </Card>
  <Card>
    <TwoAsymmetricContent variant="right" />
    <Fragment slot="title">
      <a href="two-asymmetric-content-right"
        >Two Unequal Content (right variant)</a
      >
    </Fragment>
  </Card>
  <Card>
    <ContentWithCaption />
    <Fragment slot="title">
      <a href="content-with-caption">Content with Caption</a>
    </Fragment>
  </Card>
  <Card>
    <VerticalTitleAndText />
    <Fragment slot="title">
      <a href="vertical-title-and-text-left">Vertical Title and Text</a>
    </Fragment>
  </Card>
  <Card>
    <VerticalTitleAndText variant="right" />
    <Fragment slot="title">
      <a href="vertical-title-and-text-right">Vertical Title and Text</a>
    </Fragment>
  </Card>
  <Card>
    <ThreeContent />
    <Fragment slot="title">
      <a href="three-content">Three Column Content</a>
    </Fragment>
  </Card>
  <Card>
    <MainPoint />
    <Fragment slot="title">
      <a href="main-point">Main Point</a>
    </Fragment>
  </Card>
  <Card>
    <BigNumber />
    <Fragment slot="title">
      <a href="big-number">Big Number</a>
    </Fragment>
  </Card>
  <Card>
    <Blank />
    <Fragment slot="title">
      <a href="blank">Blank</a>
    </Fragment>
  </Card>
</section>

<style>
  .page-layout {
    width: 100%;
    height: 100%;
    padding: 40px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    grid-auto-rows: 250px;
    gap: 16px;
    overflow-x: hidden;
    overflow-y: auto;
  }
</style>
